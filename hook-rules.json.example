{
  "openclaw": {
    "hookUrl": "http://127.0.0.1:18789/hooks/agent",
    "hookToken": "your-hook-secret-here"
  },
  "ignoreIds": ["your-bridge-number@c.us"],
  "contacts": {
    "categories": {
      "family": {
        "ids": ["number@c.us"],
        "action": "reply-and-notify",
        "style": "casual",
        "context": "Family member. Reply casually."
      },
      "work": {
        "ids": ["number@c.us"],
        "matchName": "Boss",
        "action": "notify-only",
        "context": "Work contact. Just notify, don't auto-reply."
      }
    },
    "defaults": {
      "groups": { "action": "ignore" },
      "unknown": { "action": "notify-only" }
    }
  },
  "telegram": {
    "chatId": "your-telegram-chat-id"
  }
}
